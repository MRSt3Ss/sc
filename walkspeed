-- Walkspeed.lua
local core = require(path.to.Core)

local LocalPlayer = core.LocalPlayer
local getChar, getHum = core.getChar, core.getHum

local desiredWalk = 16
makeSlider("Walkspeed (default 16)", 0, function(v, lbl)
	desiredWalk = math.floor(16 + v*104) -- 16..120
	lbl.Text = ("Walkspeed: %d"):format(desiredWalk)
	local ch = getChar(LocalPlayer); local hum = getHum(ch)
	if hum then hum.WalkSpeed = desiredWalk end
end)
